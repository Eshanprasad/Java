class Calc
{
	// creating variables
	int num1;
	int num2;
	int result;
	
	// creating method
	public void perform()     // perform is the method name, void is the return type, public is the Access modifier
	{
		result = num1 + num2;
	}
	
}
public class FirstCode
{
	
	public static void main(String[] args)
	{
		Calc obj = new Calc();
		obj.num1 = 5;
		obj.num2 = 6;
		obj.perform();
		System.out.println(obj.result);                     // here we are printing the result without calling the method inside the class
	
}
}




/*
even though we are not creating a constructor inside the class and we are directly calling the constructor (in line 20),
the code still runs because the constructor is by default present inside the class
*/
